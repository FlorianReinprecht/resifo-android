<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular08"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular08Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="Hauptwohnsitz bleibt in:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textView_hauptwohnsitz" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="120dp"
            android:id="@+id/editText_land"
            android:hint="Land:" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_plz"
            android:layout_below="@+id/editText_land"
            android:layout_alignParentStart="true"
            android:hint="PLZ:"
            android:layout_toStartOf="@+id/editText_ort" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_ort"
            android:hint="Ort:"
            android:layout_alignBaseline="@+id/editText_plz"
            android:layout_alignBottom="@+id/editText_plz"
            android:layout_toEndOf="@+id/button_ja" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/editText_plz"
            android:layout_alignParentStart="true"
            android:id="@+id/editText_straße"
            android:hint="Straße:" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_tuer"
            android:layout_below="@+id/editText_straße"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_nein"
            android:layout_alignEnd="@+id/button_zurueck"
            android:hint="Türnr.:"
            android:width="100dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_stiege"
            android:hint="Stiege:"
            android:layout_below="@+id/editText_straße"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/button_nein"
            android:width="100dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_hausnummer"
            android:hint="Hausnr.:"
            android:width="100dp"
            android:layout_below="@+id/editText_straße"
            android:layout_centerHorizontal="true" />


        <Button
            android:text="Zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_zurueck"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentStart="true"
            android:onClick="getPrev" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:max="88"
            android:progress="56"
            android:indeterminate="false" />


        <Button
            android:text="Weiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_weiter"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:onClick="getNext" />

    </RelativeLayout>


</RelativeLayout>



