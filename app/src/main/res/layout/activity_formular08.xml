<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular08"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular08Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:text="Hauptwohnsitz bleibt in:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/textView_hauptwohnsitz" />

        <TextView
            android:text="Land:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_land"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="122dp" />

        <TextView
            android:text="PLZ:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/textView_plz"
            android:layout_below="@+id/textView_land"
            android:layout_alignEnd="@+id/textView_land" />

        <TextView
            android:text="Ort:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/textView_ort"
            android:layout_below="@+id/textView_plz"
            android:layout_alignEnd="@+id/textView_plz" />

        <TextView
            android:text="Straße: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_strasse"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Stiege:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_stiege"
            android:layout_alignBaseline="@+id/textView_hausNr"
            android:layout_alignBottom="@+id/textView_hausNr"
            android:layout_toEndOf="@+id/button_zurueck"
            android:layout_marginStart="37dp" />

        <Button
            android:text="Zurück"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_zurueck"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentStart="true"
            android:onClick="getPrev" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:max="100"
            android:progress="50"
            android:indeterminate="false" />

        <TextView
            android:text="Hausnr.:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_hausNr"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView_strasse"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Türnr.:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_tuerNr"
            android:layout_alignBaseline="@+id/textView_stiege"
            android:layout_alignBottom="@+id/textView_stiege"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />

        <Button
            android:text="Weiter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_weiter"
            android:layout_above="@+id/progressBar"
            android:layout_alignParentEnd="true"
            android:onClick="getNext" />

    </RelativeLayout>


</RelativeLayout>



