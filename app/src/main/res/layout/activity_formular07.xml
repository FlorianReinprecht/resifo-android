<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular07"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular07Activity">

    <TextView
        android:text="Verziehen Sie ins Ausland?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button_weiter"
        android:layout_alignParentEnd="true"
        android:textSize="40sp"
        android:textAlignment="center"
        android:id="@+id/textView_ausland" />

    <Button
        android:text="ZurÃ¼ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zurueck"
        android:background="#b01817"
        android:textColor="#ffffff"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:onClick="Prev" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:max="88"
        android:progress="48"
        android:indeterminate="false" />

    <Button
        android:text="NEIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_nein"
        android:textAlignment="center"
        android:onClick="auslandNo"
        android:layout_marginLeft="191dp"
        android:layout_alignBaseline="@+id/button_ja"
        android:layout_alignBottom="@+id/button_ja"
        android:layout_toEndOf="@+id/button_ja"
        android:layout_marginStart="28dp" />

    <Button
        android:text="JA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:id="@+id/button_ja"
        android:textAlignment="center"
        android:onClick="auslandYes"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
