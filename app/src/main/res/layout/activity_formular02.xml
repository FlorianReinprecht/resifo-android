<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular02Activity">


    <TextView
        android:text="Kennen Sie Ihre ZMR-Zahl?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button_weiter"
        android:layout_alignParentEnd="true"
        android:textSize="40sp"
        android:textAlignment="center" />

    <Button
        android:text="JA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="77dp"
        android:id="@+id/button_ja"
        android:textAlignment="center" />

    <Button
        android:text="NEIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_ja"
        android:layout_toEndOf="@+id/button_ja"
        android:layout_marginStart="28dp"
        android:id="@+id/button_nein"
        android:textAlignment="center" />



    <Button
        android:text="<<   ZurÃ¼ck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zurueck"
        android:layout_above="@+id/progressBar2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Weiter   >>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_weiter"
        android:layout_above="@+id/progressBar2"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/progressBar2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:max="100"
        android:progress="20"
        android:indeterminate="false" />


</RelativeLayout>
