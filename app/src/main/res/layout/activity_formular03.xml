<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular03"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular03Activity">


    <Button
        android:text="Zurück"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zurueck"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentStart="true"
        android:onClick="getPrev" />

    <Button
        android:text="Weiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_weiter"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:onClick="getNext" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:max="88"
        android:progress="16"
        android:indeterminate="false" />

    <TextView
        android:text="Geben Sie bitte Ihre zwölfstellige ZMR-Zahl ein:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textSize="24sp"
        android:textAlignment="center"
        android:id="@+id/textView_zmr"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:id="@+id/editText_zmr"
        android:hint="ZMR-Zahl"
        android:layout_below="@+id/textView_zmr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
