<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formular01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fh.swengb.resifo_android.Formular01Activity">

    <TextView
        android:text="Anrede:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/textView_anrede"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Familienname:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_anrede"
        android:layout_marginTop="29dp"
        android:id="@+id/textView_familienname" />

    <TextView
        android:text="Vorname:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_familienname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView_vorname" />

    <TextView
        android:text="Geburtsdatum:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_vorname"
        android:layout_marginTop="33dp"
        android:id="@+id/textView_geburtsdatum" />

    <TextView
        android:text="Geburtsort:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_geburtsdatum"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:id="@+id/textView_geburtsort" />

    <TextView
        android:text="Familienstand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_geburtsort"
        android:layout_marginTop="53dp"
        android:id="@+id/textView_familienstand" />

    <TextView
        android:text="Staatsangehörigkeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView_staatsangehörigkeit"
        android:layout_below="@+id/textView_familienstand"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/progressBar2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"
        android:max="100"
        android:progress="10"
        android:indeterminate="false" />

    <Button
        android:text="<<   Zurück"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_zurueck"
        android:layout_above="@+id/progressBar2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Weiter   >>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_weiter"
        android:layout_above="@+id/progressBar2"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
